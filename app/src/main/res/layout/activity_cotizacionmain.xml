<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cotizacionmainActivity">

    <LinearLayout
       android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ImageView para la imagen -->
        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/toyota"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:contentDescription="Toyota Logo"
            android:src="@mipmap/cotizacion" />

        <TextView
            android:id="@+id/textViewToyota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Toyota Mexico"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewColonia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Av. del Mar 12000"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textViewPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Â¡Cotiza ya un nuevo auto!"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Ingrese nombre del cliente"
            />

        <Button
            android:id="@+id/btnIrCotizacion"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Cotizacion" />

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Cerrar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>